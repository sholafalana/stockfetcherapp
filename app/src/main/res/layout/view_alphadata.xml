<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/brandcolor"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/title_layout"
        android:padding="16dp"
        android:background="@color/brandcolor"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/brandcolor"
            style="@style/TextAppearance.AppCompat.Medium"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/a_symbol"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/symbol_floatbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@drawable/ic_arrow_drop_up_black_36dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/symbol_data"
            app:backgroundTint="@color/brandcolor" />


        <TextView
            android:id="@+id/symbol_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            style="@style/TextAppearance.AppCompat.Small"
            android:background="@color/brandcolor"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="GBPUSD" />

    </RelativeLayout>

    <LinearLayout
        android:background="@color/brandcolor"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/brandcolor"
                android:layout_alignParentStart="true"
                style="@style/TextAppearance.AppCompat.Medium"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="16dp"
                android:text="@string/a_daily_open"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_open"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginEnd="16dp"
                style="@style/TextAppearance.AppCompat.Small"
                android:background="@color/brandcolor"
                android:layout_alignParentEnd="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Price" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/brandcolor"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/brandcolor"
                android:layout_alignParentStart="true"
                style="@style/TextAppearance.AppCompat.Medium"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="16dp"
                android:text="@string/a_daily_high"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/brandcolor"
                android:layout_marginEnd="16dp"
                style="@style/TextAppearance.AppCompat.Small"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Price" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/brandcolor"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/brandcolor"
                android:layout_alignParentStart="true"
                style="@style/TextAppearance.AppCompat.Medium"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="16dp"
                android:text="@string/a_daily_close"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"
                android:background="@color/brandcolor"
                android:layout_alignParentEnd="true"
                android:paddingTop="8dp"
                android:layout_marginEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Price" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/brandcolor"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/brandcolor"
                android:layout_alignParentStart="true"
                style="@style/TextAppearance.AppCompat.Medium"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="16dp"
                android:text="@string/a_daily_low"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                style="@style/TextAppearance.AppCompat.Small"
                android:background="@color/brandcolor"
                android:layout_alignParentEnd="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Price" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:background="@color/brandcolor"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/brandcolor"
                android:layout_alignParentStart="true"
                style="@style/TextAppearance.AppCompat.Medium"
                android:paddingTop="8dp"
                android:layout_marginStart="16dp"
                android:paddingBottom="8dp"
                android:text="@string/a_previous_close"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_prev_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"
                android:background="@color/brandcolor"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Price" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/brandcolor"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/brandcolor"
                android:layout_alignParentStart="true"
                style="@style/TextAppearance.AppCompat.Medium"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="16dp"
                android:text="@string/a_daily_range"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"
                android:background="@color/brandcolor"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Price" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/brandcolor"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/brandcolor"
                android:layout_alignParentStart="true"
                style="@style/TextAppearance.AppCompat.Medium"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="16dp"
                android:text="@string/a_price_change"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_price_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/brandcolor"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                style="@style/TextAppearance.AppCompat.Small"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Price" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/brandcolor"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/brandcolor"
                android:layout_alignParentStart="true"
                style="@style/TextAppearance.AppCompat.Medium"
                android:paddingBottom="8dp"
                android:layout_marginStart="16dp"
                android:paddingTop="8dp"
                android:text="@string/a_volume"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_percent_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:background="@color/brandcolor"
                style="@style/TextAppearance.AppCompat.Small"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Price" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/brandcolor"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/brandcolor"
                android:layout_centerInParent="true"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/data_source_alpha"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="16dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
